name: Build EXE
on: [push]
jobs:
  build:
    runs-on: windows-latest
    steps:
      - uses: actions/checkout@v3
      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: '3.9'
      - name: Install dependencies
        run: |
          pip install customtkinter pyinstaller
      - name: Build EXE
        run: |
          pyinstaller --onefile --windowed your_filename.py 
          # ملاحظة: غير كلمة your_filename باسم ملفك
      - name: Upload Result
        uses: actions/upload-artifact@v3
        with:
          name: MyProgram
          path: dist/*.exe
